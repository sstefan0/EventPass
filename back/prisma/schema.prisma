generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  Id          String    @id @default(uuid())
  FirstName   String
  LastName    String
  Email       String    @unique
  PhoneNumber String
  Password    String
  Role        Role
  ResetToken  String?
  ExpiresAt   DateTime?
  Event       Event[]
}

model Event {
  Id          String        @id @default(uuid())
  Title       String
  Description String
  DateTime    DateTime
  Location    String
  City        City          @relation(fields: [cityId], references: [Id])
  CreatedBy   User          @relation(fields: [userId], references: [Id], onDelete: Cascade)
  EventTicket EventTicket[]
  userId      String
  cityId      String
}

model TicketType {
  Id          String        @id @default(uuid())
  Title       String
  EventTicket EventTicket[]
}

model EventTicket {
  Id           String     @id @default(uuid())
  Event        Event      @relation(fields: [EventId], references: [Id], onDelete: Cascade)
  Ticket       TicketType @relation(fields: [TicketTypeId], references: [Id], onDelete: Cascade)
  EventId      String
  TicketTypeId String
  Price        Float
  Description  String?
  Amount       Int
}

model City {
  Id      String      @id @default(uuid())
  Country CountryCode
  Name    String
  Event   Event[]
}

enum Role {
  USER
  ORGANIZER
}

enum CountryCode {
  BIH
  SRB
  CRO
  MNE
}
