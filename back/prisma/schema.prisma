generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  Id          String     @id @default(uuid())
  FirstName   String
  LastName    String
  Email       String     @unique
  PhoneNumber String
  Password    String
  Role        Role
  ResetToken  String?
  ExpiresAt   DateTime?
  Event       Event[]
  Purchase    Purchase[]
}

model Event {
  Id          String        @id @default(uuid())
  Title       String
  Description String
  DateTime    DateTime
  Location    String
  City        City          @relation(fields: [cityId], references: [Id], onDelete: Cascade)
  CreatedBy   User          @relation(fields: [userId], references: [Id], onDelete: Cascade)
  EventTicket EventTicket[]
  userId      String
  cityId      String
  Type        EventType     @relation(fields: [eventTypeId], references: [Id], onDelete: Cascade)
  eventTypeId String
  ImageUrl    String        @default("https://gigstix.ba/wp-content/uploads/2024/01/Ok-fest-2024_banner_820x312.jpg")
}

model EventType {
  Id    String  @id @default(uuid())
  Title String
  Event Event[]
}

model TicketType {
  Id          String        @id @default(uuid())
  Title       String
  EventTicket EventTicket[]
}

model EventTicket {
  Id           String     @id @default(uuid())
  Event        Event      @relation(fields: [EventId], references: [Id], onDelete: Cascade)
  Ticket       TicketType @relation(fields: [TicketTypeId], references: [Id], onDelete: Cascade)
  EventId      String
  TicketTypeId String
  Price        Float
  Description  String?
  Amount       Int
  Purchase     Purchase[]
}

model City {
  Id      String      @id @default(uuid())
  Country CountryCode
  Name    String
  Event   Event[]
}

model Purchase {
  Id            String      @id @default(uuid())
  PurchasedBy   User        @relation(fields: [userId], references: [Id])
  Ticket        EventTicket @relation(fields: [eventTicketId], references: [Id])
  Amount        Int
  Price         Float
  userId        String
  eventTicketId String
  Validated     Boolean     @default(false)
  purchasedAt   DateTime    @default(now())
}

enum Role {
  USER
  ORGANIZER
}

enum CountryCode {
  BIH
  SRB
  CRO
  MNE
}
